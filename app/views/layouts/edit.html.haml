    %link{ :rel => "stylesheet", :href => "https://cdn.simplecss.org/simple.min.css"}

  %body
    = yield 
    %div
  %p
    = turbo_frame_tag "edit_#{dom_id(reporte)}" do
      = button_to "Editar este contenido", edit_reporte_path(reporte), :method => 'get'

  %p
    = turbo_frame_tag "delete_#{dom_id(reporte)}" do
      = button_to "Eliminar este reporte", reporte_path(reporte), method: :delete, data: { turbo_confirm: "¿Está seguro de eliminar el reporte #{dom_id(reporte)}?" }

